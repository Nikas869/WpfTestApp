          <Image Source="cat1.jpg"  Width="60" />
          <TextBlock>cat1.jpg</TextBlock>
        </StackPanel>
      </ComboBoxItem>
      <StackPanel Orientation="Horizontal">
        <Image Source="cat2.jpg" Width="60" />
        <TextBlock>cat2.jpg</TextBlock>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <Image Source="cat3.jpg" Width="60" />
